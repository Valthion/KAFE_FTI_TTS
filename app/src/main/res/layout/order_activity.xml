<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="go2Checkout"
        android:text="CHECKOUT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.559"
        app:rippleColor="#FFFFFF" />

    <include
        android:id="@+id/llProgressBar"
        android:visibility="gone"
        layout="@layout/layout_progress_bar_with_text"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="267dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="MENU"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="371dp"
        android:layout_height="466dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="229dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_marginBottom="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/miayam" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="172dp"
                    android:layout_height="85dp"
                    android:layout_column="2"
                    android:layout_marginLeft="50dp"
                    android:onClick="order"
                    android:text="Mie Ayam \nRp 8.000 \n\nPesan" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_marginBottom="50dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bakso" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="172dp"
                    android:layout_height="85dp"
                    android:layout_column="2"
                    android:layout_marginLeft="50dp"
                    android:onClick="order"
                    android:text="Bakso\nRp 10.000 \n\nPesan" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_marginBottom="50dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/teh" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="172dp"
                    android:layout_height="85dp"
                    android:layout_column="2"
                    android:layout_marginLeft="50dp"
                    android:onClick="order"
                    android:text="Teh Panas \nRp 2.000 \n\nPesan" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageTerakhir"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_marginBottom="50dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/kopi" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="172dp"
                    android:layout_height="85dp"
                    android:layout_column="2"
                    android:layout_marginLeft="50dp"
                    android:onClick="order"
                    android:text="Kopi \nRp 2.500 \n\nPesan" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageTerakhirLast"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/rokok" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="172dp"
                    android:layout_height="85dp"
                    android:layout_column="2"
                    android:layout_marginLeft="50dp"
                    android:onClick="order"
                    android:text="Rokok \nRp 10.000 \n\nPesan" />

            </TableRow>
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>